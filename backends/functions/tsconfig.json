{
  "compilerOptions": {
    /* --- Updated Build Options for ES2022 & ESM --- */
    "target": "ES2022", // Set target to ES2022
    "module": "ES2022", // Use Node.js's modern module resolution for ESM (or ESNext/ES2022)
    "moduleResolution": "node", // Aligns with the 'module' setting for modern Node.js behavior (or "Bundler")
    "outDir": "lib",
    "rootDir": ".",

    /* --- General Build Options --- */
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    /* --- Path Aliases --- */
    "baseUrl": ".",
    "paths": {
      "@freedmen-s-trucking/types": ["../common/types"],
      "~*": ["./*"]
    }
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["node_modules", "lib", "build.js"]
}
